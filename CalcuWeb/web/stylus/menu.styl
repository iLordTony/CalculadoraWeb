@import "normalize.styl"
azul = #2196F3
amarillo = #FFC107
gris = #E4E4E4
fondo = #F9F9F9
azulH = #1E88E5
body
    background fondo
    padding 0 0.5em
.Section
    background white
    border-radius 0.5em
    padding 2.5em 1em
    text-align center
    max-width 25em
    margin 0 auto
    margin-top 2em
    box-shadow 0 1px 2px rgba(0,0,0,0.24)
    &-title
        font-weight normal
        margin-top 0
    &-calcu
        background azul
    &-xml
        background amarillo
    &-consu
        background azulH                                                                                                                                                                                                                                                                                                                                                                        
    a
        display block
        padding 2em
        margin 1.5em
        text-decoration none
        border-radius 5px
        color white
        
    
        