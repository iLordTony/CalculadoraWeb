@import "normalize.styl"
azul = #2196F3
amarillo = #FFC107
gris = #E4E4E4
fondo = #F9F9F9
azulH = #1E88E5
body
    background fondo
    padding 0 0.5em
.Section
    background white
    border-radius 0.5em
    padding 2.5em 1em
    text-align center
    max-width 25em
    margin 0 auto
    margin-top 2em
    box-shadow 0 1px 2px rgba(0,0,0,0.24)
    h1
        font-weight normal
        margin-top 0
    operaciones
        operacion
            display block
            font-size 1.5em
            margin-bottom 1em
            padding 1em
            border 1px solid
            id
                border-right 1px solid
                padding 1em
            laOperacion
                padding-left 1em